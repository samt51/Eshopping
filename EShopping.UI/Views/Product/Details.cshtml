@model ProductDetailsModel

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Products.ImageUrl" alt="@Model.Products.ProductName" class="img-fluid" />
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">
            @Model.Products.ProductName
        </h1>
        <hr />
       
        @foreach (var ktg in Model.Categories)
        {
            
            <a href="#" class="btn btn-link p-0 mb-3">@ktg.CategoryName</a>
        }

    <div class="mb-3">
        <h4 class="text-primary mb-3">
            @Model.Products.Price TL
            @Model.Products.Stock ADET
        </h4>
        <form asp-controller="Kart" asp-action="AddToCart" method="post" class="form-inline">

            <input type="hidden" name="ProductID" value="@Model.Products.ProductID" />
            <div class="input-group mb-3">

                <input type="number" name="quantity" class="form-control"  value="1" min="1"step="1" style="width:100px;" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-card-plus">Kart Ekle</i>
                    </button>
                </div>

            </div>
          
         


        </form>

     
    </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p class="p-3">
            
        </p>
    </div>
</div>
