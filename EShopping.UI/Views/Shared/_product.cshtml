@model Products
   


        <div class="col-md-4" style="border:1px solid orange;">
            <div class="card mb-3">
                <img src="~/img/@Model.ImageUrl" alt="@Model.ProductName" />
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#">@Model.ProductName</a>
                    </h4>
                   
                    <small class="text-muted">
                        <i class="fas fa-lira-sign"></i> @Model.Price
                        <i class="fa-lira-sign">@Model.Stock</i>
                        <i class="fa-lira-sign"></i>
                    </small>
                    
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductID" class="btn btn-outline-primary btn-sm">Details</a>

                    @if (User.Identity.IsAuthenticated)
                    {

                        <form asp-controller="Kart" asp-action="AddToCart" method="post" style="display:inline;">

                            <input type="hidden" name="ProductID" value="@Model.ProductID" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-outline-primary btn-sm ml-3">Add To Card</button>


                        </form>



                    }



                </div>
            </div>
        </div>
