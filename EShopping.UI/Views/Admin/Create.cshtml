@model ProductModel
@using EShopping.UI

@section Scripts{
  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


 }


        
       


    <div class="row">
        <div class="col-md-8">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }

            <form asp-controller="Admin" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="ProductName" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ProductName" value="" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ImageUrl" value="" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Descriptions" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <textarea id="editor" asp-for="Descriptions" class="form-control">
                        
                    </textarea>
                        <span asp-validation-for="Descriptions" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Price" value="" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Stock" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Stock" value="" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ReducedPrice" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ReducedPrice" value="" class="form-control" />
                        <span asp-validation-for="ReducedPrice" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" class="btn btn-primary">Save Product</button>
                    </div>
                </div>



                <div class="col-md-4">

                </div>

            </form>
        </div>
    </div>


