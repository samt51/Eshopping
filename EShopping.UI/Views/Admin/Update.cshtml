@model ProductModel

@{
    var counter = 0;
}
<h1>ÜRÜN GÜNCELLEME</h1>
<hr />

<form asp-controller="Admin" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">





            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <div class="form-group row">

                <label asp-for="ProductName" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="ProductName" value="@Model.ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
                    <img src="~/img/@Model.ImageUrl" width="80" />
                    <input type="file" name="file" value="" />
                   
                    
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="ImageUrl" class="form-control">
                        @Model.ImageUrl
                    </textarea>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Price" value="@Model.Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div> <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Stock" value="@Model.Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div> <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="ReducedPrice" value="@Model.ReducedPrice" class="form-control" />
                    <span asp-validation-for="ReducedPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>



        </div>
        <div class="col-md-4">


            @foreach (var item in (List<Category>)ViewBag.Categories)
            {


                var isChecked = "";
                if (Model.SelectedCategories.Any(i => i.CategoryID == item.CategoryID))
                {
                    isChecked = "checked";

                    <input type="hidden" name="SelectedCategories[@counter].CategoryID" value="@item.CategoryID" />
                    <input type="hidden" name="SelectedCategories[@counter].CategoryName" value="@item.CategoryName" />

                    counter++;

                }
                else
                {
                    isChecked = "";
                }



        <div class="custom-control custom-checkbox">
            <input type="checkbox"
                   name="categoryıds"
                   value="@item.CategoryID"
                   class="custom-control-input"
                   id="category@(item.CategoryID)"
                   @isChecked>
            <label class="custom-control-label" for="category@(item.CategoryID)">@item.CategoryName</label>
        </div>
            }
        </div>
    </div>
  </form>