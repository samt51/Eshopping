@model CategoryModel


<h1>Kategori Ekleme</h1>
<hr />

<div class="row">
    <div class="col-md-8">

        <form asp-controller="Admin" asp-action="CategoryAdd" method="post">
            <div class="form-group row">
                <label asp-for="CategoryName" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="CategoryName" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Category</button>
                </div>
            </div>

        </form>

    </div>
</div>

