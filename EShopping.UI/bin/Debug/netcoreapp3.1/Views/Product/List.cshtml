@model ProductListModels












<div class="row">
    <div class="col-md-3">
       <div class="list-group">
            @foreach (var ktg in Model.Categories)
            {
                
            <a
                asp-controller="Product"
                asp-action="List"
                asp-route-category="@ktg.CategoryName.ToLower()"


                class="list-group-item list-group-item-action ">
                @ktg.CategoryName
            </a>
            }



      </div>

    </div>
    <div class="col-md-9">

        <div class="row mt-3">
            @foreach (var product in Model.Products)
            {
                <partial name="_product" for="@product" />
            }
        </div>

    </div>
</div>